%h1#logo bartendr
=form_tag do
  .row
    .columns.small-12.small-centered.large-6
      =text_field_tag 'user-input', nil, id:'search-bar', placeholder: 'What would you like to drink?'
  .button-container
    %input{type: 'submit', class: 'button tiny radius', value: 'Make my Drink!'}
#svg-container
#instructions-container
  %h2#drink-name
  %p#instructions
#glass-container
  =link_to '#', id: 'glass-link' do
    =image_tag '', id: 'glass-image'
    #glass-name
#ingredients-container
- if @tipjar
  #tipjar
